{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/core/extension.ts",
    "src/core/MarkdownEditorProvider.ts",
    "src/utils/utils.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "src/**/*.tsx",
    "src/**/*.test.*"
  ]
}